@model Hotel_Booking.ViewModels.LoginData;

@{
    ViewData["Title"] = "Login";
}

<div class="body">
    <div class="wrapper">
        <div class="divdanger" asp-validation-summary="All"></div>
        <form asp-action="Login" asp-controller="Account">
            <h1>Login</h1>
            <div class="input-box">
                <input asp-for="UserName" type="text" placeholder="Username" required>
                <i class='bx bxs-user'></i>
                <span class="isvalid" asp-validation-for="UserName"></span>
            </div>

            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Password" required>
                <i class='bx bxs-lock-alt'></i>
                <span class="isvalid" asp-validation-for="Password"></span>
            </div>

            <div class="remember-forgot">
                <label>
                    <input asp-for="RememberMe" type="checkbox">
                    Remember me
                </label>

                <a href="#">Forgot Password ?</a>
            </div>

            <input type="submit" class="btn" value="Login" />

            <div class="register-link">
                <p>
                    Don't have an account ?
                    <a asp-action="Register" asp-controller="Account">Register</a>
                </p>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section PageStyle {
    <link rel="stylesheet" href="~/css/AccountLogin.css">
}