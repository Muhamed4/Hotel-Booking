
@model Hotel_Booking.ViewModels.EditFeature
@{
    ViewData["Title"] = "Edit Service" + Model.ID.ToString();
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditService" asp-controller="AdminHotels">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" readonly class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeatureID" class="control-label"></label>
                <input asp-for="FeatureID" readonly class="form-control" />
                <span asp-validation-for="FeatureID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="HotelID" class="form-control" />
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="ServiceDetails" asp-controller="AdminHotels" asp-route-hotelId="@Model.HotelID" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section PageStyle {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}