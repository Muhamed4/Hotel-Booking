
@model Hotel_Booking.ViewModels.FacilityDetail
@{
    ViewData["Title"] = "FacilityDetails";
}

<table class="table table-borderd table-striped table-hover">
    <thead>
        <tr>
            <th> ID </th>
            <th> Description </th>
            <th> Action </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var facility in Model.facilities){
            <tr>
                <td>@facility.ID</td>
                <td style="max-width: 500px;">@facility.Description</td>
                <td>
                    <a asp-action="EditFacility" asp-controller="AdminHotels" asp-route-facilityId="@facility.ID" class="btn btn-primary">Edit</a>
                    |
                    <a asp-action="DeleteFacility" asp-controller="AdminHotels" asp-route-facilityId="@facility.ID" 
                        asp-route-hotelId="@Model.HotelID" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this Facility?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">
                <a class="btn btn-success" asp-controller="AdminHotels" asp-action="AddFacility" asp-route-featureId="@Model.featureId">NEW</a>
            </td>
        </tr>
    </tfoot>
</table>

<div>
    <a asp-action="Details" asp-controller="AdminHotels" asp-route-hotelId="@Model.HotelID" class="btn btn-primary">Back to List</a>
</div>


@section PageStyle {
    <link rel="stylesheet" href="~/css/AdminHotelsIndex.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}