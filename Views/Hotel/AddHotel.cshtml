
@model Hotel_Booking.ViewModels.HotelData
@{
    ViewData["Title"] = "AddHotel";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form asp-action="AddHotel" asp-controller="Hotel" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name" name="Name" class="control-label"></label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter the name of hotel" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input type="text" asp-for="Country" class="form-control" placeholder="Enter the country of hotel" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input type="text" asp-for="City" class="form-control" placeholder="Enter the city of hotel" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input type="text" asp-for="Description" class="form-control" placeholder="Write a Description for the hotel" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfRooms" class="control-label"></label>
            <input type="number" asp-for="NumberOfRooms" class="form-control" value="1" placeholder="Number of Rooms in the hotel" />
            <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="File" class="control-label"></label>
            <input type="file" name="File" asp-for="File" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Next" class="btn btn-info" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
