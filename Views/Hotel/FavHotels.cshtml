@model List<Hotel_Booking.ViewModels.Favhotel>
@{
    ViewData["Title"] = "Trips";
}




<div class="body">
    <div class="content">
        @* <h1>@ViewData["Title"]</h1> *@

        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@item.HotelID">
                    @* <img src="~/Images/thirdhotel.jpg" alt="" class="img-fluid rounded"> *@
                    <div class="img" style="background-image: url(/Images/@item.ImageUrl);">
                        <div class="add">
                            <span class="sp1">@item.Country, @item.City</span>
                            <span class="sp2">@item.Description
                            </span>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <p style="margin: 300px 0 0 100px; font-size: xxx-large; color: rgba(0, 0, 0, 0.1);">
                There is no Favourite Hotels
            </p>
        }
    </div>
</div>


@section PageStyle {
    <link rel="stylesheet" href="~/css/HotelTrips.css">
        @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
}