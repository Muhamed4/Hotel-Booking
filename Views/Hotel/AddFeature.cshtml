@model Hotel_Booking.ViewModels.FeatureData

<h2>Add Features @ViewBag.HotelID</h2>

<form asp-action="AddFeature" asp-route-hotelID="@ViewBag.HotelID">
    <div class="form-group">
        <label asp-for="FreeParking">Free Parking</label>
        <input asp-for="FreeParking" type="checkbox"/>
    </div>

    <div class="form-group">
        <label asp-for="LaundryFacility">Laundry Facility</label>
        <input asp-for="LaundryFacility" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="NoSmoking">No Smoking</label>
        <input asp-for="NoSmoking" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="FreeWifi">Free Wifi</label>
        <input asp-for="FreeWifi" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="FreeBreakfast">Free Breakfast</label>
        <input asp-for="FreeBreakfast" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="AirportTransfer">Airport Transfer</label>
        <input asp-for="AirportTransfer" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="FontDesk247">24/7 Front Desk</label>
        <input asp-for="FontDesk247" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="Restaurant">Restaurant</label>
        <input asp-for="Restaurant" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="AirCondition">Air Condition</label>
        <input asp-for="AirCondition" type="checkbox" />
    </div>


    <button type="submit" class="btn btn-primary">Add Features</button>
</form>



